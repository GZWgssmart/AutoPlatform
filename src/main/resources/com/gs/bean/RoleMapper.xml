	<select id="queryByPager" resultType="list" resultMap="roleResultMap" parameterType="com.gs.common.bean.Pager">
		<![CDATA[
			SELECT * FROM t_role limit #{beginIndex}, #{pageSize}
		]]>
	</select>

	<select id="count" resultType="int">
		<![CDATA[
			SELECT COUNT(*) FROM t_role
		]]>
	</select>

	<update id="inactive" parameterType="string">
		<![CDATA[
			UPDATE t_role set roleStatus = 'N' where roleId = #{roleId}
		]]>
	</update>

	<update id="active" parameterType="string">
		<![CDATA[
			  UPDATE t_role set roleStatus = 'Y' where roleId = #{roleId}
