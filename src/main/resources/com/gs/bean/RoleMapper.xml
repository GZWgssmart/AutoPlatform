	</delete>

	<update id="update" parameterType="role">
		<![CDATA[
			UPDATE t_role SET roleName = #{roleName}, roleDes = #{roleDes}  WHERE roleId = #{roleId}
		]]>
	</update>

	<update id="batchUpdate" parameterType="list">
		<![CDATA[

