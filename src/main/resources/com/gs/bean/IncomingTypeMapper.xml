	</select>

	<select id="queryById" parameterType="string" resultType="incomingType">
		<![CDATA[

		]]>
	</select>

	<select id="queryByPager" resultType="list" resultMap="incomingTypeResultMap" parameterType="com.gs.common.bean.Pager">
		<![CDATA[
			select  it.*,c.companyId,c.companyName from t_incoming_type it ,t_company c where it.companyId = c.companyId
			order by inTypeCreatedTime Desc limit #{beginIndex}, #{pageSize}
		]]>
	</select>

	<select id="count" resultType="int">
		<![CDATA[
			select count(*) from t_incoming_type
		]]>
	</select>

	<update id="inactive" parameterType="string">
		<![CDATA[
			update t_incoming_type set inTypeStatus = 'N' where inTypeId = #{inTypeId}
		]]>
	</update>

	<update id="active" parameterType="string">
		<![CDATA[
			update t_incoming_type set inTypeStatus = 'Y' where inTypeId = #{inTypeId}
		]]>
	</update>

</mapper>
