	</select>

	<select id="count" resultType="int">
		select count(colorId) from t_car_color
	</select>
	<select id="searchByPager" resultType="list" resultMap="carColorResultMap">
		select * from t_car_color  where 1 = 1 and colorName like concat('%', #{colorName}, '%') limit #{pager.beginIndex}, #{pager.pageSize}
	</select>
	<select id="searchCount" resultType="int">
		select count(colorId) from t_car_color where 1 = 1 and colorName like concat('%',#{colorName},'%')
	</select>

	<update id="inactive" parameterType="string">
		<![CDATA[
			update t_car_color set colorStatus = "N" where colorId = #{colorId}
		]]>
	</update>

	<update id="active" parameterType="string">
		<![CDATA[
			update t_car_color set colorStatus = "Y" where colorId = #{colorId}
		]]>
	</update>

	<select id="queryByColorPager" resultType="list" resultMap="carColorResultMap">
		select * from t_car_color where colorStatus = #{status} limit #{pager.beginIndex}, #{pager.pageSize}
	</select>

	<select id="statusCount" resultType="int">
		select count(colorId) from t_car_color where colorStatus = #{status}
	</select>
