	<select id="queryByPager" resultType="list" resultMap="workInfoResultMap" parameterType="com.gs.common.bean.Pager">
		<![CDATA[
			SELECT w.*, u.userId, u.userName FROM t_work_info w, t_user u where 1=1 and w.userId = u.userId
				order by workCreatedTime Desc, w.userId
		]]>limit #{beginIndex}, #{pageSize}
	</select>

	<select id="count" resultType="int">
		<![CDATA[
			SELECT COUNT(*) FROM t_work_info
		]]>
	</select>

	<update id="inactive" parameterType="string">
		<![CDATA[
			UPDATE t_work_info set workStatus = 'N' where workId = #{workId}
		]]>
	</update>

	<update id="active" parameterType="string">
		<![CDATA[
			UPDATE t_work_info set workStatus = 'Y' where workId = #{workId}
