	</delete>

	<delete id="batchDelete" parameterType="list">
		<![CDATA[

		]]>
	</delete>

	<update id="update" parameterType="workInfo">
		<![CDATA[
			UPDATE t_work_info SET
				 workStatus = 'Y', userId = #{userId} WHERE workId = #{workId}
		]]>
	</update>

	<update id="batchUpdate" parameterType="list">
