	<select id="queryByPager" resultType="list" resultMap="trackListResultMap" parameterType="com.gs.common.bean.Pager">
		<![CDATA[
		select c.userName as customerName,c.userPhone as customerPhone,l.*,u.userName as adminName from t_maintain_record r
		left join t_checkin c on r.checkinId= c.checkinId
		left join t_track_list l on l.userId=c.userId
		left join t_user u on u.userId = l.userId  where r.trackStatus ='N' and r.recordStatus ='Y' and c.checkinStatus ='y'
		]]>
		limit #{beginIndex}, #{pageSize}
	</select>

	<select id="count" resultType="int">
		<![CDATA[
		select count(*) from t_maintain_record r
		left join t_checkin c on r.checkinId= c.checkinId
		left join t_track_list l on l.userId=c.userId
		left join t_user u on u.userId = l.userId  where r.trackStatus ='N' and r.recordStatus ='Y' and c.checkinStatus ='y'
		]]>
	</select>

